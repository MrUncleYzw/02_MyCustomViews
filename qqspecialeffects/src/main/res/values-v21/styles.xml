<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tv_leftmenu_menu">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#319CFF</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="normal_theme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!--隐藏状态栏-->
        <item name="android:windowFullscreen">false</item>
        <!-- 隐藏标题栏 -->
        <item name="android:windowNoTitle">true</item>
		<item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="immerse_theme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!--半透明状态栏-->
        <item name="android:windowTranslucentStatus">false</item>
        <!--半透明导航栏-->
        <item name="android:windowTranslucentNavigation">true</item>
        <!--Android 5.x开始需要手动设置颜色，否则导航栏会呈现系统默认的浅灰色-->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>
