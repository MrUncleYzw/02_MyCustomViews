<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:shiqkuangsan="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f6f6f6"
            android:orientation="vertical">

            <com.shiqkuangsan.android21.AutoRatioLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                shiqkuangsan:ratio="2.33">

                <ImageView
                    android:id="@+id/iv_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/subject_default" />

            </com.shiqkuangsan.android21.AutoRatioLayout>

            <TextView
                android:id="@+id/tv_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="图片的配字"
                android:textColor="#b2b0b0"
                android:textSize="22sp" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>